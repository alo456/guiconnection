{% extends 'base.html.twig' %}
{% block title %}
    Configuración
{% endblock %}
{% block body %}
    <main class="main">
        <br />  
        <div class ="container-fluid">
  
    
    <div class="animated fadeIn">

    <!-- Page Header-->
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h3 class="display-4">Configuracion de tu cuenta</h3>
            <p class="lead">Aqui podras encontrar la configuracion referente a la administracion de tu cuenta Tueat</p>
        </div>
    </div>

            <!-- CONFIGURACION DE CONTRASEÑA   -->
    <div class="card">
                <!-- TITULO -->
                      <div class="card-header">
                      <h4 class="card-title">Contraseña</h4>
                      </div>

                      <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                
                            {{form_start (form) }}
                            {{form_end (form) }}

                            </div>
                          </div>
                      </div>
                      </div>
                            
                            
                <!-- CONFIGURACION DE HORARIO  -->
                <div class="card">
                <!-- TITULO -->
                <div class="card-header">
                <h4 class="card-title">Horario</h4>
                </div>

                <div class="card-body">
                    {{form_start (schedule) }}
                    <table>
                        <tr>
                            <td></td>
                            <th scope="col">Lunes</th>
                            <th scope="col">Martes</th>
                            <th scope="col">Miercoles</th>
                            <th scope="col">Jueves</th>
                            <th scope="col">Viernes</th>
                            <th scope="col">Sábado</th>
                            <th scope="col">Domingo</th>
                        </tr>
                        <tr>
                            <th scope="row">Apertura</th>
                            <td>{{form_widget(schedule.monday.fromHour)}}</td>
                            <td>{{form_row(schedule.tuesday.fromHour)}}</td>
                            <td>{{form_row(schedule.wednesday.fromHour)}}</td>
                            <td>{{form_row(schedule.thursday.fromHour)}}</td>
                            <td>{{form_row(schedule.friday.fromHour)}}</td>
                            <td>{{form_row(schedule.saturday.fromHour)}}</td>
                            <td>{{form_row(schedule.sunday.fromHour)}}</td>
                        </tr>
                         <tr>
                            <th scope="row">Cierre</th>
                            <td>{{form_row(schedule.monday.toHour)}}</td>
                            <td>{{form_row(schedule.tuesday.toHour)}}</td>
                            <td>{{form_row(schedule.wednesday.toHour)}}</td>
                            <td>{{form_row(schedule.thursday.toHour)}}</td>
                            <td>{{form_row(schedule.friday.toHour)}}</td>
                            <td>{{form_row(schedule.saturday.toHour)}}</td>
                            <td>{{form_row(schedule.sunday.toHour)}}</td>
                        </tr>
                    </table>
                        {{form_end(schedule)}}
                </div>
                
                </div>

              <!-- CONFIGURACION DE CAFETERIAS   -->
              <div class="card">
                <!-- TITULO -->
                <div class="card-header">
                <h4 class="card-title">Cafeterias</h4>
                </div>

                <div class="card-body">
                  {{form_start (configuration) }}
                   {{form_end (configuration) }}
                </div>
                </div>




   
    </div>
  </div>
   
    </main>
{% endblock %}